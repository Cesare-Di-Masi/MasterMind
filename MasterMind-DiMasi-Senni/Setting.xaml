<Window x:Class="MasterMind_DiMasi_Senni.GameSettings"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MasterMind_DiMasi_Senni"
        mc:Ignorable="d"
        Title="Window1" Height="450" Width="800">
    <Grid Background="#FF9E622F">
        <Grid.RowDefinitions>
            <RowDefinition Height="29*"/>
            <RowDefinition Height="33*"/>
        </Grid.RowDefinitions>
        <Label x:Name="lblNumberColor" Content="Seleziona il numero di colori &#xD;&#xA;Max 1-20&#xD;&#xA;" HorizontalAlignment="Left" Margin="53,20,0,0" Width="169" FontSize="14" FontFamily="Bernard MT Condensed" VerticalAlignment="Top" />
        <Label x:Name="lblLenghtMessage" Content="Seleziona la lunghezza &#xD;&#xA;del messaggio" HorizontalAlignment="Left" Margin="53,98,0,0" Width="224" FontSize="14" FontFamily="Bernard MT Condensed" VerticalAlignment="Top" Height="50" />
        <Label x:Name="lblNumeroTentativi" Content="Seleziona il numero di tentativi &#xD;&#xA;da 1-15" HorizontalAlignment="Left" Margin="53,192,0,0" Width="224" FontSize="14" FontFamily="Bernard MT Condensed" VerticalAlignment="Top" Height="50" Grid.RowSpan="2" />
        <Label x:Name="lblComplessitàMessaggio" Content="Seleziona la complessità del &#xD;&#xA;messaggio da 1-10" HorizontalAlignment="Left" Margin="53,88,0,0" Width="224" FontSize="14" FontFamily="Bernard MT Condensed" VerticalAlignment="Top" Height="50" Grid.Row="1" />
        <Slider x:Name="SldNcolors" Width="120" Margin="90,72,590,105" />
        <Slider x:Name="sldCodeLength" Width="120" Margin="90,153,590,24" />
        <Slider x:Name="SldNAttemps" Width="120" Margin="90,44,590,161" Grid.Row="1" />
        <Slider x:Name="SldCodeComplexity" Width="120" Margin="90,143,590,62" Grid.Row="1" />
        <Button x:Name="btnTornaIndietro" Content="Torna indietro" Margin="52,174,0,29" HorizontalAlignment="Left" Width="121" FontSize="15" FontFamily="Bernard MT Condensed" Background="#FF5D8A28" BorderBrush="Black" Foreground="White" Click="btnTornaIndietro_Click" Grid.Row="1" />
        <Button x:Name="btnConferma" Content="Conferma" Margin="379,52,0,41" HorizontalAlignment="Left" Width="289" FontSize="15" FontFamily="Bernard MT Condensed" Background="#FF5D8A28" BorderBrush="Black" Foreground="White" Click="btnConferma_Click" />
        <Button x:Name="btnGioca" Content="Gioca" Margin="379,34,0,87" HorizontalAlignment="Left" Width="289" FontSize="15" FontFamily="Bernard MT Condensed" Background="#FF5D8A28" BorderBrush="Black" Foreground="White" Grid.Row="1" Click="btnGioca_Click" />
    </Grid>
</Window>