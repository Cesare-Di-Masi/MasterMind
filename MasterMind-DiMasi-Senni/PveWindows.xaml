<Window x:Class="MasterMind_DiMasi_Senni.PveWindows"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MasterMind_DiMasi_Senni"
        mc:Ignorable="d"
        Title="PveWindows" Height="450" Width="800">
    <Grid Background="#FF9E622F">
        <Label x:Name="lblModality" Content="Selezionare la modalità di&#xD;&#xA; gioco contro il computer " HorizontalAlignment="Center" Margin="0,10,0,360" Width="212" FontSize="20" FontFamily="Bernard MT Condensed" Foreground="White" />
        <Button x:Name="btnDifficult" Content="DIFFICILE (10 colori)" HorizontalAlignment="Right" Margin="50,148,50,0" VerticalAlignment="Top" Height="56" Width="172" FontSize="15" FontFamily="Bernard MT Condensed" Background="#FF5D8A28" BorderBrush="Black" Foreground="White" />
        <Button x:Name="btnEasy" Content="FACILE(4 COLORI)" Margin="50,148,0,229" HorizontalAlignment="Left" Width="172" FontSize="15" FontFamily="Bernard MT Condensed" Click="Button_Click_1" BorderBrush="Black" Background="#FF5D8A28" Foreground="White"/>
        <Button x:Name="btnMedium" Content="MEDIA(6 COLORI)" Margin="0,148,0,230" HorizontalAlignment="Center" Width="172" FontSize="15" FontFamily="Bernard MT Condensed" Click="btnMedium_Click" Background="#FF5D8A28" BorderBrush="Black" Foreground="White">

            <Button.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform AngleY="0"/>
                    <RotateTransform/>
                    <TranslateTransform Y="0"/>
                </TransformGroup>
            </Button.RenderTransform>
        </Button>
        <Button x:Name="btnPersonalized" Content="PERSONALIZZATE" Margin="0,277,0,100" HorizontalAlignment="Center" Width="172" FontSize="15" FontFamily="Bernard MT Condensed" Background="#FF5D8A28" BorderBrush="Black" Foreground="White"/>

    </Grid>
</Window>