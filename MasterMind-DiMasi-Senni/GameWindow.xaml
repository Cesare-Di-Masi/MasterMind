<Window x:Class="MasterMind_DiMasi_Senni.GameWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MasterMind_DiMasi_Senni"
        mc:Ignorable="d"
        Title="GameWindow" Height="600" Width="800">
    <Grid x:Name="gridGame" Background="#FF9E622F" >
        <Rectangle Stroke="#FF5D8A28" Margin="0,0,710,30" OpacityMask="Black" Fill="#FF5D8A28"/>
        <Button x:Name="btnMenù" Content="Menù" HorizontalAlignment="Right" Margin="0,554,710,0" VerticalAlignment="Top" Height="30" Width="90" FontSize="15" FontFamily="Bernard MT Condensed" Background="#FF949494" BorderBrush="Black" Foreground="Black" RenderTransformOrigin="0.511,1.468" />
        <Button x:Name="btnRiavvia" Content="Riavvia" HorizontalAlignment="Right" Margin="0,554,620,0" VerticalAlignment="Top" Height="30" Width="90" FontSize="15" FontFamily="Bernard MT Condensed" Background="#FF949494" BorderBrush="Black" Foreground="Black" />
        <Rectangle Stroke="#FF5D8A28" Margin="355,0,355,0" OpacityMask="Black" Fill="#FF5D8A28"/>
        <Label x:Name="lblGiuste" Content="Giuste " HorizontalAlignment="Left" Margin="90,525,0,30" Width="45" FontSize="15" FontFamily="Bernard MT Condensed" Foreground="Black" Background="#FF949494" BorderBrush="Black" />
        <Label x:Name="lblPosSbagliato" Content="Posto sbagliato " HorizontalAlignment="Left" Margin="140,525,0,30" Width="107" FontSize="15" FontFamily="Bernard MT Condensed" Foreground="Black" Background="#FF949494"/>
        <Label x:Name="lblTurSbagliato" Content="Tutto sbaglaito " HorizontalAlignment="Left" Margin="252,524,0,30" Width="98" FontSize="15" FontFamily="Bernard MT Condensed" Foreground="Black" Background="#FF949494" />
        <Rectangle Stroke="#FF5D8A28" Margin="780,0,0,0" OpacityMask="Black" Fill="#FF5D8A28"/>
        <Rectangle Stroke="Black" Margin="445,473,20,69" OpacityMask="Black" Fill="Black"/>
        <Button x:Name="btnMenù1" Content="Invai la combinazione" HorizontalAlignment="Right" Margin="0,548,52,0" VerticalAlignment="Top" Height="30" Width="269" FontSize="15" FontFamily="Bernard MT Condensed" Background="#FF949494" BorderBrush="Black" Foreground="Black" RenderTransformOrigin="0.511,1.468" />
        <Label x:Name="lblTurSbagliato1" Content="Cliccare sui colori per creare la combinazione" HorizontalAlignment="Left" Margin="472,513,0,41" Width="276" FontSize="15" FontFamily="Bernard MT Condensed" Foreground="Black" />
        <Ellipse Stroke="Blue" Margin="445,473,310,69" Fill="Blue"/>
        <Ellipse Stroke="Green" Margin="551,476,205,71" Fill="Green"/>
        <Ellipse Stroke="Red" Margin="630,476,127,71" Fill="Red"/>
        <Ellipse Stroke="Yellow" Margin="716,476,39,71" Fill="Yellow"/>
        <Label x:Name="lblValoreGiuto1" Content="Giusto 0" HorizontalAlignment="Left" Margin="90,473,0,82" Width="56" FontSize="15" FontFamily="Bernard MT Condensed" Foreground="Black" RenderTransformOrigin="0.467,0.036" Background="#FF949494" />
        <Label x:Name="lblRongValue1" Content="False" HorizontalAlignment="Left" Margin="252,473,0,82" Width="56" FontSize="15" FontFamily="Bernard MT Condensed" Foreground="Black" RenderTransformOrigin="0.467,0.036" Background="#FF949494" />
        <Label x:Name="lblAlmostRong1" Content="Sabaglieto 0" HorizontalAlignment="Left" Margin="151,473,0,82" Width="96" FontSize="15" FontFamily="Bernard MT Condensed" Foreground="Black" RenderTransformOrigin="0.467,0.036" Background="#FF949494" />
        <Rectangle Stroke="Black" Margin="445,0,20,550" OpacityMask="Black" Fill="Black"/>
    </Grid>
</Window>
